<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:deviceGroups="[/etc/mobile/groups/responsive]"
        cq:template="/conf/edc/settings/wcm/templates/news-release-detail-page"
        jcr:primaryType="cq:PageContent"
        sling:resourceType="edc/components/structure/newsrelease/page">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/foundation/components/responsivegrid">
            <header
                jcr:primaryType="nt:unstructured"
                sling:resourceType="edc/components/structure/header"
                editable="{Boolean}true"/>
            <breadcrumb
                jcr:primaryType="nt:unstructured"
                sling:resourceType="edc/components/content/breadcrumb"/>
            <headersection
                jcr:primaryType="nt:unstructured"
                sling:resourceType="edc/components/content/newsrelease/headersection"
                editable="{Boolean}true"/>
            <responsivegrid
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/foundation/components/responsivegrid">
                <cq:responsive jcr:primaryType="nt:unstructured"/>
                <articlecontainer
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="edc/components/structure/article/articlecontainer">
                    <!-- Change articleleftcontainer editable to true when needed -->
                    <articleleftcontainer
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/foundation/components/responsivegrid">
                        <cq:responsive jcr:primaryType="nt:unstructured">
                            <default
                                jcr:primaryType="nt:unstructured"
                                width="3"/>
                            <tablet
                                jcr:primaryType="nt:unstructured"
                                width="12"/>
                            <phone
                                jcr:primaryType="nt:unstructured"
                                width="12"/>
                        </cq:responsive>
                        <articleauthors
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="edc/components/content/article/articleauthors"
                            editable="{Boolean}true">
                            <cq:responsive jcr:primaryType="nt:unstructured">
                                <default
                                    jcr:primaryType="nt:unstructured"
                                    width="6"/>
                                <tablet
                                    jcr:primaryType="nt:unstructured"
                                    width="12"/>
                                <phone
                                    jcr:primaryType="nt:unstructured"
                                    width="12"/>
                            </cq:responsive>
                        </articleauthors>
                    </articleleftcontainer>
                    <articlebodycontainer
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="edc/components/structure/article/articlebodycontainer">
                        <cq:responsive jcr:primaryType="nt:unstructured">
                            <default
                                jcr:primaryType="nt:unstructured"
                                width="6"/>
                            <tablet
                                jcr:primaryType="nt:unstructured"
                                offset="0"
                                width="9"/>
                            <phone
                                jcr:primaryType="nt:unstructured"
                                width="12"/>
                        </cq:responsive>
                        <responsivegrid
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="wcm/foundation/components/responsivegrid"
                            editable="{Boolean}true">
                            <cq:responsive jcr:primaryType="nt:unstructured">
                                <default
                                    jcr:primaryType="nt:unstructured"
                                    width="12"/>
                                <tablet
                                    jcr:primaryType="nt:unstructured"
                                    width="12"/>
                                <phone
                                    jcr:primaryType="nt:unstructured"
                                    width="12"/>
                            </cq:responsive>
                        </responsivegrid>
                        <aboutedc
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="edc/components/content/centraltext"
                            editable="{Boolean}true">
                            <cq:responsive jcr:primaryType="nt:unstructured">
                                <default
                                    jcr:primaryType="nt:unstructured"
                                    width="12"/>
                                <tablet
                                    jcr:primaryType="nt:unstructured"
                                    width="12"/>
                                <phone
                                    jcr:primaryType="nt:unstructured"
                                    width="12"/>
                            </cq:responsive>
                        </aboutedc>
                        <spokesperson
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="edc/components/content/newsrelease/spokesperson"
                            editable="{Boolean}true">
                            <cq:responsive jcr:primaryType="nt:unstructured">
                                <default
                                    jcr:primaryType="nt:unstructured"
                                    width="6"/>
                                <tablet
                                    jcr:primaryType="nt:unstructured"
                                    width="12"/>
                                <phone
                                    jcr:primaryType="nt:unstructured"
                                    width="12"/>
                            </cq:responsive>
                        </spokesperson>
                    </articlebodycontainer>
                    <articlerightcontainer
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="edc/components/structure/article/articlerightcontainer"
                        editable="{Boolean}false">
                        <cq:responsive jcr:primaryType="nt:unstructured">
                            <default
                                jcr:primaryType="nt:unstructured"
                                width="3"/>
                            <phone
                                jcr:primaryType="nt:unstructured"
                                width="12"/>
                            <tablet
                                jcr:primaryType="nt:unstructured"
                                width="12"/>
                        </cq:responsive>
                    </articlerightcontainer>
                </articlecontainer>
                <responsivegrid
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/foundation/components/responsivegrid"
                    editable="{Boolean}true"/>
            </responsivegrid>
            <footer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="edc/components/structure/footer"/>
        </root>
        <cq:responsive jcr:primaryType="nt:unstructured">
            <breakpoints jcr:primaryType="nt:unstructured">
                <phone
                    jcr:primaryType="nt:unstructured"
                    title="Smaller Screen"
                    width="{Long}719"/>
                <tablet
                    jcr:primaryType="nt:unstructured"
                    title="Tablet"
                    width="{Long}959"/>
            </breakpoints>
        </cq:responsive>
    </jcr:content>
</jcr:root>