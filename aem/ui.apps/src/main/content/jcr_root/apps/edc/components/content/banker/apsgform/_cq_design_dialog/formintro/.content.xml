<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Form Intro"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <formtitle
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldDescription="Please enter Form Title"
                fieldLabel="Form Title"
                required="{Boolean}true"
                name="./formTitle"/>
            <formdescription
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                fieldDescription="Please enter form Description"
                fieldLabel="Form Description"
                required="{Boolean}true"
                useFixedInlineToolbar="{Boolean}true"
                name="./formDescription" />
            <slectYourBankPlaceholder
            	jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldDescription="Please enter the Select Your Bank dropdown placeholder"
                fieldLabel="Select Your Bank Placeholder"
                required="{Boolean}true"
                name="./selectYourBank"/>
             <submitButton
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldDescription="Submit Button text"
                fieldLabel="Submit Button"
                name="./submitButton"
                required="{Boolean}true"/>
        </items>
    </content>
</jcr:root>