<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Form"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <back
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Back button text"
                name="./back"
                required="{Boolean}true"/>
            <next
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Next button text"
                name="./next"
                required="{Boolean}true"/>
            <submit
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Submit button text"
                name="./submit"
                required="{Boolean}true"/>
            <singleddplaceholder
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Single dropdown placeholder"
                name="./singleddplaceholder"
                required="{Boolean}true"/>
            <radioyeslabel
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Radio buttons Yes label"
                name="./radioyeslabel"
                required="{Boolean}true"/>
            <radionolabel
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Radio buttons No label"
                name="./radionolabel"
                required="{Boolean}true"/>
            <uploadbuttonlabel
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Upload button text"
                name="./uploadbuttonlabel"
                required="{Boolean}true"/>
            <filesizelimit
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                fieldLabel="Upload file size limit in MB"
                name="./filesizelimit"
                required="{Boolean}true"/>
            <filequantitylimit
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                fieldLabel="Upload file quantity limit (per uploader)"
                name="./filequantitylimit"
                required="{Boolean}true"/>
        </items>
    </content>
</jcr:root>