<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <step1
                jcr:primaryType="nt:unstructured"
                jcr:title="Step 1"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items
                            jcr:primaryType="nt:unstructured">
                            <step1title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title"
                                fieldDescription="Text Right of Step 1 of 4 i.e Applicant Information"
                                name="./step1Title"
                                required="{Boolean}true"/>
                           <step1Description
                               jcr:primaryType="nt:unstructured"
                               sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                               fieldLabel="Description (Optional)"
                               fieldDescription="Optional description under Applicant Information"
                               name="./step1Description"
                               useFixedInlineToolbar="{Boolean}true">
                               <rtePlugins jcr:primaryType="nt:unstructured">
                                   <format
                                       jcr:primaryType="nt:unstructured"
                                       features="*"/>
                                   <justify
                                       jcr:primaryType="nt:unstructured"
                                       features="*"/>
                                   <links
                                       jcr:primaryType="nt:unstructured"
                                       features="[modifylink,unlink]"/>
                               </rtePlugins>
                               <uiSettings jcr:primaryType="nt:unstructured">
                                   <cui jcr:primaryType="nt:unstructured">
                                       <inline
                                           jcr:primaryType="nt:unstructured"
                                           toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,links#anchor,#image,findreplace#find,findreplace#replace,spellcheck#checktext,misctools#specialchars,misctools#sourceedit,#styles,#paraformat,table#table]">
                                           <popovers jcr:primaryType="nt:unstructured">
                                               <justify
                                                   jcr:primaryType="nt:unstructured"
                                                   items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                   ref="justify"/>
                                           </popovers>
                                       </inline>
                                   </cui>
                               </uiSettings>
                           </step1Description>
                           <applicantTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Applicant primary contact information"
                                fieldDescription="Applicant primary contact information"
                                name="./applicantTitle"
                                required="{Boolean}true"/>
                            <companyTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Company Information"
                                fieldDescription="Company Information"
                                name="./companyTitle"
                                required="{Boolean}true"/>
                           <brnDescription
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Canada Revenue Agency (CRA) Number description"
                                fieldDescription="i.e. (9-digit Canada Revenue Agency (CRA) Business Number)"
                                name="./brnDescription"
                                required="{Boolean}true"/>
                           <hqTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Headquarters information Title"
                                fieldDescription="section title for Headquarters information"
                                name="./hqTitle"
                                required="{Boolean}true"/>
                           <hqDescription
                               jcr:primaryType="nt:unstructured"
                               sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                               fieldLabel="Headquarters Description (optional)"
                               fieldDescription="Optional description under Headquarters information"
                               name="./hqDescription"
                               useFixedInlineToolbar="{Boolean}true">
                               <rtePlugins jcr:primaryType="nt:unstructured">
                                   <format
                                       jcr:primaryType="nt:unstructured"
                                       features="*"/>
                                   <justify
                                       jcr:primaryType="nt:unstructured"
                                       features="*"/>
                                   <links
                                       jcr:primaryType="nt:unstructured"
                                       features="[modifylink,unlink]"/>
                               </rtePlugins>
                               <uiSettings jcr:primaryType="nt:unstructured">
                                   <cui jcr:primaryType="nt:unstructured">
                                       <inline
                                           jcr:primaryType="nt:unstructured"
                                           toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,links#anchor,#image,findreplace#find,findreplace#replace,spellcheck#checktext,misctools#specialchars,misctools#sourceedit,#styles,#paraformat,table#table]">
                                           <popovers jcr:primaryType="nt:unstructured">
                                               <justify
                                                   jcr:primaryType="nt:unstructured"
                                                   items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                   ref="justify"/>
                                           </popovers>
                                       </inline>
                                   </cui>
                               </uiSettings>
                           </hqDescription>
                        </items>
                    </column>
                </items>
            </step1>
        </items>
    </content>
</jcr:root>
