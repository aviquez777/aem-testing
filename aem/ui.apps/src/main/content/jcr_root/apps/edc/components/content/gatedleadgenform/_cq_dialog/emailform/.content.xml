<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <questions
                jcr:primaryType="nt:unstructured"
                jcr:title="Email form"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items
                            jcr:primaryType="nt:unstructured">
                            <emailFormTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Email Form Title"
                                fieldDescription="Email Form Title"
                                name="./emailFormTitle"
                                required="{Boolean}true"/>
                            <emailForDescription
                               jcr:primaryType="nt:unstructured"
                               sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                               fieldLabel="Email Form Description"
                               fieldDescription="Email Form Description"
                               name="./emailForDescription"
                               useFixedInlineToolbar="{Boolean}true">
                               <rtePlugins jcr:primaryType="nt:unstructured">
                                   <format
                                       jcr:primaryType="nt:unstructured"
                                       features="*"/>
                                   <justify
                                       jcr:primaryType="nt:unstructured"
                                       features="*"/>
                                   <links
                                       jcr:primaryType="nt:unstructured"
                                       features="[modifylink,unlink]"/>
                               </rtePlugins>
                               <uiSettings jcr:primaryType="nt:unstructured">
                                   <cui jcr:primaryType="nt:unstructured">
                                       <inline
                                           jcr:primaryType="nt:unstructured"
                                           toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,links#anchor,#image,findreplace#find,findreplace#replace,spellcheck#checktext,misctools#specialchars,misctools#sourceedit,#styles,#paraformat,table#table]">
                                           <popovers jcr:primaryType="nt:unstructured">
                                               <justify
                                                   jcr:primaryType="nt:unstructured"
                                                   items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                   ref="justify"/>
                                           </popovers>
                                       </inline>
                                   </cui>
                               </uiSettings>
                           </emailForDescription>
                            <emailLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Email Label"
                                fieldDescription="Email Label"
                                name="./emailLabel"
                                required="{Boolean}true"/>
                             <emailHelperText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Email Helper Text"
                                fieldDescription="Email Helper Text"
                                name="./emailHelperText"
                                required="{Boolean}true"/>
                           <caslText
                               jcr:primaryType="nt:unstructured"
                               sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                               fieldLabel="CASL Text"
                               fieldDescription="CASL Text"
                               name="./caslText"
                               useFixedInlineToolbar="{Boolean}true">
                               <rtePlugins jcr:primaryType="nt:unstructured">
                                   <format
                                       jcr:primaryType="nt:unstructured"
                                       features="*"/>
                                   <justify
                                       jcr:primaryType="nt:unstructured"
                                       features="*"/>
                                   <links
                                       jcr:primaryType="nt:unstructured"
                                       features="[modifylink,unlink]"/>
                               </rtePlugins>
                               <uiSettings jcr:primaryType="nt:unstructured">
                                   <cui jcr:primaryType="nt:unstructured">
                                       <inline
                                           jcr:primaryType="nt:unstructured"
                                           toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,links#anchor,#image,findreplace#find,findreplace#replace,spellcheck#checktext,misctools#specialchars,misctools#sourceedit,#styles,#paraformat,table#table]">
                                           <popovers jcr:primaryType="nt:unstructured">
                                               <justify
                                                   jcr:primaryType="nt:unstructured"
                                                   items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                   ref="justify"/>
                                           </popovers>
                                       </inline>
                                   </cui>
                               </uiSettings>
                           </caslText>
                           <submiEmailButton
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Submit Email Button Text"
                                fieldLabel="Submit Email Button Text"
                                name="./submiEmailButton"
                                required="{Boolean}true"/>
                           <submitEmailButtonEnTxt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Analytics Submit Email Button Text i.e.'access content'"
                                fieldLabel="Analytics Submit Email Button Text"
                                name="./submitEmailButtonEnTxt"
                                required="{Boolean}true"/>
                           <submitErrorText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Submit Error Text"
                                fieldLabel="Submit Error Text"
                                name="./submitErrorText"
                                required="{Boolean}true"/>
                            <successTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Success Title Text"
                                fieldLabel="Success Title Text"
                                name="./successTitle"
                                required="{Boolean}true"/>
                            <successText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Success Description Text"
                                fieldLabel="Success Description Text"
                                name="./successText"
                                required="{Boolean}false"/>
                        </items>
                    </column>
                </items>
            </questions>
        </items>
    </content>
</jcr:root>
