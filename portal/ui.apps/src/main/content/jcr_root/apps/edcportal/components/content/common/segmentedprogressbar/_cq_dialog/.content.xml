<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Segmented Progress Bar"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <segments
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                fieldLabel="Number of Bar Segments"
                fieldDescription="Number of Bar Segments"
                name="./segments"
                required="{Boolean}false"/>
            <currentStep
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                fieldLabel="Current Step to be highlighted"
                fieldDescription="Current Step to be highlighted"
                name="./currentStep"
                required="{Boolean}false"/>
            <stepWord
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="'Step' text"
                fieldDescription="Just the 'Step' word on ie Step 1 of 3"
                name="./stepWord"
                required="{Boolean}false"/>
            <ofWord
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="'of' text"
                fieldDescription="Just the 'of' word on ie Step 1 of 3"
                name="./ofWord"
                required="{Boolean}false"/>
            <stepTitle
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Step's Title (Overriden by Profile Tite if Present)"
                fieldDescription="Step's Title"
                name="./stepTitle"
                required="{Boolean}false"/>
        </items>
    </content>
</jcr:root>
